{
  "manifest_version": 2,
  "name": "Laboratory by Mozilla",
  "version": "1.0",

  "description": "Because good website security shouldn't only be available to mad scientists!",
  "homepage_url": "https://github.com/marumari/laboratory",

  "applications": {
    "gecko": {
      "id": "1b2383b324c8520974ee097e46301d5ca4e076de387c02886f1c6b1503671586@pokeinthe.io",
      "strict_min_version": "53.0a1"
    }
  },

  "background": {
    "scripts": ["js/localforage.min.js", "js/laboratory.js"]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": "img/vial.svg",
    "default_title": "Laboratory by Mozilla",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}